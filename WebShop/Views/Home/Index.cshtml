@model WebShop.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="container text-center">
    <table class="table table-hover">
        <thead>
            <tr>

                <th scope="col">Namn</th>
                <th scope="col">Alternativ</th>


            </tr>
        </thead>
        <tbody>

        @foreach (var category in Model.ProductCategories)
        {
            <tr>

                <td>@category.Name</td>
                <td><a asp-controller="Product" asp-action="ViewProducts" asp-route-id="@category.Id" class="btn btn-secondary btn-sm active" role="button" aria-pressed="true">Visa Produkter</a></td>
            </tr>
        }


        </tbody>
    </table>
</div>
