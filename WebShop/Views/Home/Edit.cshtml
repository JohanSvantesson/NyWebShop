@model WebShop.ViewModels.HomeEditViewModel

@{
    ViewData["Title"] = "Editera Kategori";
}
<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Editera Kategori</h3>
                </div>

                <div class="card-body">
                    <form method="post" asp-controller="Home" asp-action="Edit">

                        <div class="form-group">
                            <label asp-for="Name">Namn</label>
                            <input class="form-control" asp-for="Name">
                            <span asp-validation-for="Name"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>