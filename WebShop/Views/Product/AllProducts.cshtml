@model WebShop.ViewModels.ProductAllProductsViewModel

@{
    ViewData["Title"] = "Alla produkter";
}

<div class="container text-center">
    <table class="table table-hover">
        <thead>
        <tr>

            <th scope="col">Namn</th>
            <th scope="col">Kategori</th>
            <th scope="col">Editera</th>
            <th scope="col">Visa Produkt</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var product in Model.Products)
        {
            <tr>

                <td>@product.Name</td>
                <td>@product.ProductCategory.Name</td>
                <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-secondary btn-sm active" role="button" aria-pressed="true">Editera</a></td>
                <td><a asp-controller="Product" asp-action="ViewTargetProduct" asp-route-id="@product.Id" class="btn btn-secondary btn-sm active" role="button" aria-pressed="true">Visa Produkt</a></td>
            </tr>
        }


        </tbody>
    </table>
    <br>
    <a asp-controller="Product" asp-action="NewProduct" class="btn btn-secondary" role="button" aria-pressed="true">
        Create new
    </a>
</div>